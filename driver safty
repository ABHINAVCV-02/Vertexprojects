int irSensor = 2;   // IR sensor output pin
int relayPin = 8;   // Relay control pin
int sensorState = 0;

void setup() {
  pinMode(irSensor, INPUT);
  pinMode(relayPin, OUTPUT);
  digitalWrite(relayPin, HIGH); // Relay ON initially
  Serial.begin(9600);
}

void loop() {
  sensorState = digitalRead(irSensor);

  if (sensorState == LOW) {  // Eye closed (sensor detects)
    digitalWrite(relayPin, LOW);   // Turn OFF relay
    Serial.println("Eye Closed - Relay OFF");
  } else {
    digitalWrite(relayPin, HIGH);  // Turn ON relay
    Serial.println("Eye Open - Relay ON");
  }

  delay(200); // Small delay to stabilize readings
}
